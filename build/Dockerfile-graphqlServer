FROM us.icr.io/dia-registry/devops/build:latest as build

WORKDIR $GOPATH/src/
COPY ./cmd/http/graphqlServer ./
COPY ./cmd/http/graphqlServer/libs/linux* ./libs/
ENV LD_LIBRARY_PATH=./libs
ENV CGO_LDFLAGS=-L./libs
RUN CGO_LDFLAGS="-L./libs" go build

FROM gcr.io/distroless/base

COPY --from=build ./graphqlServer /bin/graphqlServer
COPY ./cmd/http/graphqlServer/schema/ /schema/
COPY ./cmd/http/graphqlServer/libs/linux* /libs/


CMD ["graphqlServer"]

